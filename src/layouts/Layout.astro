---
import "../styles/global.css";
const { title = "Astro Basics" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col justify-center items-center bg-zinc-700">
    <div class="w-7xl h-screen flex flex-col items-center py-2 px-2 bg-zinc-700 justify-center">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
	color: white;
    margin: 0;
    width: 100%;
    height: 100%;
	font-family: monospace, sans-serif;
  }
</style>
